<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.auction.client.controllers.PlaceBidController"
      style="-fx-padding: 20;"
      stylesheets="@../css/auction.css">

    <fx:include source="header.fxml"/>

    <Label text="Place Your Bid" style="-fx-font-size: 18px;"/>
    <TextField fx:id="amountField" promptText="Bid Amount"/>
    <Button text="Submit" onAction="#placeBid"/>
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
