<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.auction.client.controllers.BidController"
      style="-fx-padding: 20;">
    <fx:include source="header.fxml"/>

    <Label fx:id="itemNameLabel" style="-fx-font-size: 18px;" />
    <Label fx:id="currentPriceLabel" />
    <TextField fx:id="bidAmountField" promptText="Your Bid" />
    <Button text="Submit Bid" onAction="#submitBid"/>
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
